<style>
  :root{
    --neon: #00ffff; /* change this hex to set the neon color */
  }
  body {
    margin: 0;
    height: 100vh;
    display: grid;
    place-items: center;
    background: radial-gradient(circle at top left, #00111f, #000);
    font-family: 'Poppins', sans-serif;
    overflow: hidden;
    cursor: none; /* hide default cursor so neon is the pointer */
  }

  h1 {
    font-size: clamp(28px, 6vw, 64px);
    color: white;
    text-transform: uppercase;
    letter-spacing: 3px;
    animation: pop 1s ease-out forwards;
    text-shadow: 0 0 20px var(--neon), 0 0 40px var(--neon), 0 0 60px var(--neon);
    margin: 0;
    padding: 12px;
  }

  span.v3 {
    display: inline-block;
    font-size: 0.55em;
    background: var(--neon);
    color: #031022;
    padding: 6px 10px;
    border-radius: 8px;
    animation: popbadge 1s ease-out 0.28s forwards;
    opacity: 0;
  }

  /* main glowing orb (largest, centered on pointer) */
  .cursor {
    position: fixed;
    top: 0;
    left: 0;
    width: 28px;
    height: 28px;
    background: var(--neon);
    border-radius: 50%;
    pointer-events: none;
    mix-blend-mode: screen;
    box-shadow: 0 0 18px var(--neon), 0 0 36px var(--neon), 0 0 80px var(--neon);
    transform: translate(-50%, -50%);
    transition: transform 0.05s linear;
  }

  /* small trailing dots */
  .trail {
    position: fixed;
    top: 0;
    left: 0;
    width: 18px;
    height: 18px;
    background: var(--neon);
    border-radius: 50%;
    pointer-events: none;
