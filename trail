    transform: translate(-50%, -50%);
  }

  @keyframes pop {
    0% { transform: rotateX(70deg) scale(0.2); opacity: 0; filter: blur(10px); }
    60% { transform: rotateX(-10deg) scale(1.08); opacity: 1; filter: blur(0); }
