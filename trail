<body>
  <h1>ULTIMATE MATH FUN <span class="v3">V3</span></h1>

  <div class="cursor"></div>

<script>
  // neon trail script
  const cursor = document.querySelector('.cursor');

  // create trailing dots
  const numTrails = 10;
  const trails = [];
  for (let i = 0; i < numTrails; i++) {
    const el = document.createElement('div');
    el.className = 'trail';
    document.body.appendChild(el);
    trails.push({ el, x: window.innerWidth/2, y: window.innerHeight/2 });
  }

  let mouseX = window.innerWidth / 2;
  let mouseY = window.innerHeight / 2;
  document.addEventListener('mousemove', e => {
    mouseX = e.clientX;
    mouseY = e.clientY;
    // instantly move main orb (no smoothing)
    cursor.style.transform = `translate(${mouseX}px, ${mouseY}px)`;
  });

  // Smooth trailing movement
  function animate() {
    let x = mouseX;
    let y = mouseY;
    trails.forEach((t, i) => {
      // simple easing for trailing effect
      t.x += (x - t.x) * (0.18 - i * 0.012);
      t.y += (y - t.y) * (0.18 - i * 0.012);
      const scale = 1 - i * 0.07;
      t.el.style.transform = `translate(${t.x}px, ${t.y}px) scale(${scale})`;
      t.el.style.opacity = 0.9 - i * 0.08;
      x = t.x;
      y = t.y;
    });
    requestAnimationFrame(animate);
  }
  animate();

  // For mobile: make orb follow touch
  document.addEventListener('touchmove', e => {
    const t = e.touches[0];
    mouseX = t.clientX;
    mouseY = t.clientY;
    cursor.style.transform = `translate(${mouseX}px, ${mouseY}px)`;
  }, {passive:true});
</script>
</body>
</html>
